<h1>Cats!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burger that are ate!</h2>

<ul>
  {{#each burgers}}
    {{#if eat}}
      {{> burger/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Eat?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eat!<br>
    <input type="radio" name="sleepy" value="0"> Uneat
  </div>

  <button type="submit">Add Burger</button>
</form>
